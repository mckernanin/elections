{
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
		{
            "type": "vcs",
            "url": "https://github.com/WebDevStudios/cmb2-attached-posts"
        },
		{
            "type": "vcs",
            "url": "https://github.com/jcchavezs/cmb2-conditionals"
        }
    ],
    "require": {
		"wpackagist-theme/twentysixteen": "*",
        "wpackagist-plugin/cmb2": "*",
		"WebDevStudios/cmb2-attached-posts": "*",
